@{
    Layout = "_LayoutAdministrador";
}
<!DOCTYPE html>
<html>

<body>
    <div>
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Lista de Pedidos</h1>
                    </div>
                </div>
            </div>
        </section>


        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Historial de pedidos.</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 20%">
                                    Pedido
                                </th>
                                <th style="width: 30%">
                                    Personas Trabajando en el pedido
                                </th>
                                <th>
                                    Progreso
                                </th>
                                <th style="width: 8%" class="text-center">
                                    Estado
                                </th>
                                <th style="width: 20%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    1
                                </td>
                                <td>
                                    <a>
                                        Pedido 1
                                    </a>
                                    <br />
                                    <small>
                                        Hecho el 1/1/2024
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <p>Empleado 1,</p>
                                        </li>
                                        <li class="list-inline-item">
                                            <p>Empleado 2 </p>
                                        </li>

                                    </ul>
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                        </div>
                                    </div>
                                    <small>
                                        50%
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-primary">En progreso</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("VerPedido", "Administrador")">
                                        <i class="fas fa-folder">
                                        </i>
                                        Ver
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        Cancelar pedido
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    1
                                </td>
                                <td>
                                    <a>
                                        Pedido 2
                                    </a>
                                    <br />
                                    <small>
                                        Hecho el 1/1/2024
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <p>Empleado 3,</p>
                                        </li>
                                        <li class="list-inline-item">
                                            <p>Empleado 4 </p>
                                        </li>

                                    </ul>
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                        </div>
                                    </div>
                                    <small>
                                        50%
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-primary">En progreso</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("VerPedido", "Administrador")">
                                        <i class="fas fa-folder">
                                        </i>
                                        Ver
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        Cancelar pedido
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>


        </section>

    </div>





</body>
</html>
