@{
    Layout = "_LayoutAdministrador";
}
<!DOCTYPE html>
<html>

<body>

    <div>

        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Editar receta</h1>

                    </div>

                </div>
            </div>
        </section>


        <section class="content">


            <div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="card-body pb-0">
                        <div class="row d-flex align-items-stretch">

                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                <div class="card bg-light">

                                    <br />
                                    <form onsubmit="EditarReceta(event)">
                                        <div class="card-body pt-0">
                                            @Html.AntiForgeryToken()
                                            <div class="form-group">


                                            <label for="nombreReceta">Nombre:</label>
                                            <input id="nombreReceta" type="text" class="form-control" placeholder="Nombre receta">


                                            </div>
                                            <br />


                                            <br />

                                            <div class="form-group">
                                                <label for="instruccionesReceta" class="text-black">Instrucciones exactas</label>
                                                <textarea name="instruccionesReceta" id="instruccionesReceta" cols="30" rows="5" class="form-control" placeholder="Escriba las instrucciones de la receta aca..."></textarea>

                                            </div>
                                            <label for="listaIngredientes" class="text-black">Ingredientes relacionados:</label>
                                            <ul id="listaIngredientes">
                                            </ul>
                                            <br />
                                            <div class="from-group">
                                                <label for="ingredientes" class="text-black">Ingredientes <span class="text-danger"></span></label>
                                                <select id="ingredientes" class="form-control" multiple>
                                                </select>
                                            </div>

                                        </div>
                                        <div class="card-footer">
                                            <div class="text-right">
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    Modificar
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>


                        </div>

                    </div>

                </div>


            </div>


        </section>

    </div>



</body>
</html>
@section Scripts
{


    <script type="text/javascript" src="~/js/receta/editar.js" asp-append-version=true>


    </script>
}