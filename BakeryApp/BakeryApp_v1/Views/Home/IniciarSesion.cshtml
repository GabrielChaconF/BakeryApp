@{
    Layout = "_Layout";
}


<div class="untree_co-section">
    <div class="container">

        <div class="block">
            <div class="row justify-content-center">


                <div class="col-md-8 col-lg-8 pb-4">


                    <div class="row mb-5">
                        <div class="col-lg-4">
                            <h1>Iniciar Sesión</h1>
                        </div>

                        <form onsubmit="IniciarSesion(event)">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="text-black" for="correo">Correo electronico</label>
                                        <input type="text" class="form-control" id="correo" placeholder="Correoelectronico@ejemplo.com">
                                    </div>
                                </div>

                            </div>
                            <br />
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="text-black" for="contra">Contraseña</label>
                                    <input type="text" class="form-control" id="contra" placeholder="Contraseña">
                                    <a @* class="btn btn-secondary me-2" *@ href="@Url.Action("RecuperarContrasena", "Home")">Olvide mi contraseña.</a>
                                </div>
                            </div>

                            <br />
                            <button class="btn btn-secondary me-2" type="submit">Ingresar a Cliente</button>
                            <a class="btn btn-secondary me-2" href="@Url.Action("Index", "Administrador")">Ingresar a Administrador</a>
                            <a class="btn btn-secondary me-2" href="@Url.Action("Index", "Empleado")">Ingresar a Empleado</a>
                            <div class="mt-2">
                                <p class="text-black" for="lname">¿No tienes una cuenta?</p>
                                <a class="btn btn-secondary me-2" href="@Url.Action("Registrarse", "Home")">Registrarse</a>
                            </div>
                        </form>

                    </div>

                </div>

            </div>

        </div>


    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/login/login.js" asp-append-version=true></script>
}