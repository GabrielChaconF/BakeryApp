@{
    Layout = "_Layout";
}


<div class="untree_co-section">
    <div class="container">

        <div class="block">
            <div class="row justify-content-center">


                <div class="col-md-8 col-lg-8 pb-4">


                    <div class="row mb-5">
                        <div class="col-lg-4">
                            <h1>Recuperar contraseña.</h1>

                        </div>

                        <h7>Ingresa el correo electronico con el que creaste tu cuenta y te enviaremos los pasos para cambiar tu contrasaña</h7>

                        <br />

                        <form>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="text-black" for="fname">Correo electronico</label>
                                        <input type="text" class="form-control" id="fname" placeholder="Correoelectronico@ejemplo.com">
                                    </div>
                                </div>

                            </div>

                            <br />

                            <div>
                                <a class="btn btn-secondary me-2" href="@Url.Action("CambiarContrasena", "Home")">Enviar</a>
                            </div>
                        </form>

                    </div>

                </div>

            </div>

        </div>


    </div>
</div>


