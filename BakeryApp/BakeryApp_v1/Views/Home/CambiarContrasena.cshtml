@{
    Layout = "_Layout";
}



<div class="untree_co-section">
    <div class="container">

        <div class="block">
            <div class="row justify-content-center">



                <div class="col-md-8 col-lg-8 pb-4">
                    @if (TempData["exito"] != null)
                    {
                        <h2 class="text text-sucess"> Por favor, revise su correo electrónico asociado a la cuenta </h2>
                    }

                    <div class="row mb-5">
                        <div class="col-lg-4">
                            <h1>Cambiar contraseña.</h1>
                        </div>

                        <h7>Por favor sigue los siguientes pasos para cambiar tu contrasaña e ingresar a tu cuenta.</h7>

                        <form onsubmit="CambiarContra(event)">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="text-black" for="correo">Correo electronico</label>
                                        <input type="text" class="form-control" id="correo" placeholder="Correoelectronico@ejemplo.com">
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label class="text-black" for="codigo">Código de Recuperación </label>
                                        <input type="text" class="form-control" id="codigo" placeholder="abc123d">
                                    </div>
                                </div>

                            </div>

                          
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="text-black" for="contra">Contraseña nueva</label>
                                    <input type="text" class="form-control" id="contra" placeholder="Contraseña nueva">
                                </div>
                            </div>

                            <br />

                            <div>
                                <button class="btn btn-secondary me-2" type="submit">Cambiar contraseña</button>
                            </div>
                        </form>

                    </div>

                </div>

            </div>

        </div>


    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/cambiarContra/cambiarContra.js" asp-append-version="true"></script>
}

