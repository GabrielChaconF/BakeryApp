									</div> <!-- /.service-contents-->
								</div> <!-- /.service -->
							</div>
						</div>

						<form>
							<div class="row">
								<div class="col-6">
									<div class="form-group">
										<label class="text-black" for="fname">Nombre</label>
										<input type="text" class="form-control" id="fname" placeholder="Nombre">
									</div>
								</div>
								<div class="col-6">
									<div class="form-group">
										<label class="text-black" for="lname">Apellidos</label>
										<input type="text" class="form-control" id="lname" placeholder="apellidos">
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="text-black" for="email">Correo electronico</label>
								<input type="email" class="form-control" id="email" placeholder="Correoelectronico@ejemplo.com">
							</div>

							<div class="form-group">
								<label class="text-black" for="clave">Contraseña</label>
								<input type="password" class="form-control" id="clave" placeholder="******">
							</div>

							<div class="form-group">
								<label class="text-black" for="confirmarclave">Confirmar Contraseña</label>
								<input type="password" class="form-control" id="confirmarclave" placeholder="******">
							</div>


							<div class="col-6">
								<div class="form-group">
									<label class="text-black" for="lname">Número Telefónico</label>
									<input type="text" class="form-control" id="lname" placeholder="Ejemplo: 8451-2687">
								</div>
							</div>

							@* <br /> *@
							<div class="form-group">
								<label class="text-black" for="email">Residencia</label>
								<select class="form-select">
									<option selected>Seleccione una de las provincias disponibles para nuestros envios (GAM).</option>
									<option value="1">San Jose</option>
									<option value="2">Alajuela</option>
									<option value="3">Heredia</option>
									<option value="4">Cartago</option>
								</select>
							</div>

							@* <div class="form-group mb-5">
								<label class="text-black" for="message">Message</label>
								<textarea name="" class="form-control" id="message" cols="30" rows="5"></textarea>
							</div> *@
							<br />

							<button type="submit" class="btn btn-primary-hover-outline">Registrarse</button>
						</form>

					</div>

				</div>

			</div>

		</div>


	</div>
	

